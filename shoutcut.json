								"left_command"
							],
							"optional": [ "any" ]
						}
					},
					"to": [ 
						{ "shell_command": "open -a 'Visual Studio Code.app'" }
					]
				}
			]
		},
		{
			"description": "Caps_Lock + C : Launch Google Chrome.app",
			"manipulators": [
				{
					"type": "basic",
					"from": { 
						"key_code": "c",
						"modifiers": {
							"mandatory": [
								"left_shift",
								"left_control", 
								"left_option",
								"left_command"
							],
							"optional": [ "any" ]
						}
					},
					"to": [ 
						{ "shell_command": "open -a 'Google Chrome.app'" }
					]
				}
			]
		},
		{
			"description": "Caps_Lock + S : Launch Safari.app",
			"manipulators": [
				{
					"type": "basic",
					"from": { 
						"key_code": "s",
						"modifiers": {
							"mandatory": [
								"left_shift",
								"left_control", 
								"left_option",

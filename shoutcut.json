{
	"title": "단축키로 앱 실행 (rev.1.00)",
	"rules": [
	
		{
			"description": "Caps_Lock to Hyperkey",
			"manipulators": [
				{
					"type": "basic",
					"parameters": {
						"basic.to_if_alone_timeout_milliseconds": 2000,
						"basic.to_if_held_down_threshold_milliseconds": 2000
					},
					"from": { 
						"key_code": "caps_lock",
						"modifiers": { "optional" : [ "any" ] }
					},
					"to": [ 
						{ 
							"key_code": "left_shift",
							"modifiers": [
								"left_control",
								"left_option",
								"left_command"
							]
						}
					],
					"to_if_held_down" : [ { "key_code": "caps_lock" } ]
				}
			]
		},
		
		{
			"description": "Caps_Lock + t : Launch Terminal w/ English",
			"manipulators": [
				{
					"type": "basic",
					"from": { 
						"key_code": "t",
						"modifiers": {
							"mandatory": [
								"left_shift",
								"left_control", 
								"left_option",
								"left_command"
							],
							"optional": [ "any" ]
						}
					},
					"to": [ 
						{ "shell_command": "open -a 'iTerm.app'" },
						{ "select_input_source": { "language": "en" } }	
					]
				}
			]
		},
		{
			"description": "Caps_Lock + I : Launch IntelliJ IDEA",
			"manipulators": [
				{
					"type": "basic",
					"from": { 
						"key_code": "i",
						"modifiers": {
							"mandatory": [
								"left_shift",
								"left_control", 
								"left_option",
								"left_command"
							],
							"optional": [ "any" ]
						}
					},
					"to": [ 
						{ "shell_command": "open -a 'IntelliJ IDEA.app'" }
					]
				}
			]
		},
		{
			"description": "Caps_Lock + V : Launch Visual Studio Code",
			"manipulators": [
				{
					"type": "basic",
					"from": { 
						"key_code": "v",
